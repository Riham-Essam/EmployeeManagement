@model UserClaimViewModel

@{
	ViewBag.Title = "Manage User Claim";
}

<form method="post">

	<div class="card">

		<div class="card-header">
			Manage User Claim
		</div>

		<div class="card-body">
			@for (int i = 0; i < Model.Claims.Count; i++)
			{
				<div class="form-check m-1">
					<input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
					<input class="form-check-input" asp-for="@Model.Claims[i].IsSelected" />
					<label asp-for="@Model.Claims[i].IsSelected" class="form-check-label">
						@Model.Claims[i].ClaimType
					</label>
				</div>
			}
		</div>

		<div asp-validation-summary="All" class="text-danger"></div>

		<div class="card-footer">
			<button type="submit" class="btn btn-primary" style="width:auto">Update</button>
			<a asp-action="EditUser" asp-route-id="@Model.UserId" class="btn btn-primary" style="width:auto">Cancel</a>
		</div>
	</div>
</form>